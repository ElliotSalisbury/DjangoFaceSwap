{
  "manifest_version": 2,

  "name": "Blind Simulator",
  "version": "0.0.1",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "description": "This extension removes every image and replaces it with alt-text",
  "author": "Elliot Salisbury",

  "icons": {"128":"icon128.png"},

  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["jquery-1.11.1.min.js","priority-queue.js","swapimages.js"],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_popup": "options.html"
  },

  "permissions": [
    "activeTab",
    "storage"
  ]
}